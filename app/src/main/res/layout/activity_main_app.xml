<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.schwarcz.samuel.trempeasy.controller.MainAppActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mainapp_activity_floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-140dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_manage" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/treampeasy"

            android:layout_marginTop="-60dp"
            >
        </ImageView>
    <TextView
        android:id="@+id/mainapp_activity_hey_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="26dp"
        android:textColor="@color/colorAccent"

        android:text="Hey !"
        />

    <Button
        android:id="@+id/mainapp_activity_looking_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:height="100dp"
        android:textSize="20dp"
        android:text="looking for a ride"/>
    <Button
        android:id="@+id/mainapp_activity_planning_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:height="100dp"
        android:textSize="20dp"
        android:text="Create a tremp"/>
    <Button
        android:id="@+id/mainapp_activity_my_tremps_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:height="100dp"
        android:textSize="20dp"
        android:text="tremps i add"/>
        <Button
            android:id="@+id/mainapp_activity_my_the_tremp_i_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:height="100dp"
            android:textSize="20dp"
            android:text="tremps i registered"/>
    </LinearLayout>

</ScrollView>

</RelativeLayout>