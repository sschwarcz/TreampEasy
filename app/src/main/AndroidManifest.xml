<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.schwarcz.samuel.trempeasy">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TrempEasy"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:label="Tremp Registered"
            android:name=".MyTremp.TrempsIRegisteredActivity"></activity>
        <activity
            android:name=".lookingTremp.LookingTrempResultActivity"
            android:label="Tremp result" />
        <activity
            android:label="Looking for a tremp"
            android:name=".lookingTremp.LookingTrempActivity" />
        <activity
            android:label="My Tremps"
            android:name=".MyTremp.SeeMyTrempActivity" />
        <activity
            android:label="Create Tremp"
            android:name=".MyTremp.CreateTrempActivity" />
        <activity
            android:name=".auth.ProfileActivity"
            android:label="TrempEasy"
            android:theme="@style/AppTheme" />
        <activity android:name=".controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="TrempEasy"
            android:name=".controller.RegisterActivity" />
        <activity
            android:label="TrempEasy"
            android:name=".controller.SignInActivity" />
        <activity
            android:label="TrempEasy"
            android:name=".controller.MainAppActivity" />
    </application>
    <uses-permission android:name="android.permission.CALL_PHONE"/>

</manifest>